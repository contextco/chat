<div class="flex justify-between px-6 py-2 border-b items-center">
  <div class="font-serif">
    context ai
  </div>

  <div class="right text-xs">
    <%= link_to chats_path, class: 'text-blue' do %>
    + New Chat
    <% end %>
  </div>
</div>
<div class="flex min-h-0 grow items-stretch">
  <div class="w-64 flex flex-col gap-1 shrink-0 items-stretch p-4">
    <% @chats.each do |chat| %>
      <%= link_to chat_path(chat), class: 'p-2 text-sm rounded hover:bg-blue-50' do %>
        <div class="truncate">
          <%= chat.messages.first&.content %>
        </div>

        <div class="text-xs text-slate-500">
          Created <%= distance_of_time_in_words_to_now(chat.created_at) %> ago
        </div>
      <% end %>
    <% end %>

    <% if @chats.empty? %>
      <div class="text-slate-500 text-center">
        No chats found.
      </div>
    <% end %>
  </div>

  <%= yield %>
</div>